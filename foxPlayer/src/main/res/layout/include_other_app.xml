            app:scale_width="396" />

        <TextView
            android:id="@+id/other_app_littlefox_song_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_other_app_littlefox_song"
            android:textColor="@color/color_ffffff"
            app:scale_height="95"
            app:scale_left="958"
            app:scale_textsize="38"
            app:scale_top="520"
            app:scale_width="396" />

        <TextView
            android:id="@+id/other_app_littlefox_storybook_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_other_app_rocketgirl"
            android:textColor="@color/color_ffffff"
            app:scale_height="95"
            app:scale_left="1354"
            app:scale_textsize="38"
            app:scale_top="520"
            app:scale_width="396" />
                                                                   
    </com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>