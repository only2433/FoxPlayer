            app:scale_left="230"
            app:scale_top="226"
            app:scale_width="268" />

        <ImageView
            android:id="@+id/button_other_app_littlefox_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_app02"
            app:scale_height="269"
            app:scale_left="626"
            app:scale_top="226"
            app:scale_width="268" />

        <ImageView
            android:id="@+id/button_other_app_littlefox_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_app03"
            app:scale_height="269"
            app:scale_left="1024"
            app:scale_top="226"
            app:scale_width="268" />

        <ImageView
            android:id="@+id/button_other_app_rocket_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_app04"
            app:scale_height="269"
            app:scale_left="1420"
            app:scale_top="226"
            app:scale_width="268" />

        <TextView
            android:id="@+id/other_app_littlefox_eng_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_other_app_littlefox_eng"
            android:textColor="@color/color_ffffff"
            app:scale_height="95"
            app:scale_left="166"
            app:scale_textsize="38"
            app:scale_top="520"
            app:scale_width="396" />

        <TextView
            android:id="@+id/other_app_littlefox_ch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_other_app_littlefox_ch"
            android:textColor="@color/color_ffffff"
            app:scale_height="95"
            app:scale_left="562"
            app:scale_textsize="38"
